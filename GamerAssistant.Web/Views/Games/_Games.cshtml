<main class="pt-3">
    <!--Games Lists Tab-->
    <v-tabs fixed centered class="pt-5" :scrollable="false">
        <v-tabs-bar class="transparent">
            <v-tabs-item v-for="tab in tabs" :key="tab" :href="'#' + tab">{{ tab }}</v-tabs-item>
            <v-tabs-slider class="yellow"></v-tabs-slider>
        </v-tabs-bar>

        <v-tabs-items>
            <v-tabs-content fluid grid-list-xl lazy class="pt-1" :id="'My Games'">
                <v-layout row wrap justify-center class="pa-3">

                    <v-flex class="pa-3" lg4 md6 sm12 xs12 v-for="game in games.BggGames" :key="game.id">
                        <v-card>

                            <v-card-media :src="game.ImageUrl" height="120px" @@click.native="game.ShowDetails = !game.ShowDetails">
                                <div id="overlay" style="background-color: rgba(0,0,0,0.5); z-index: 2; width: 100%; height: 100%; display: flex; justify-content: flex-start;">
                                    <v-card-title class="headline white--text" primary-title style="align-self: flex-end"><span v-text="game.Name"></span></v-card-title>
                                </div>
                            </v-card-media>

                            <v-slide-y-transition>
                                <v-card-text v-show="game.ShowDetails">
                                    <v-content fluid grid-list-sm class="pb-1">
                                        <v-layout row wrap justify-center >
                                            <v-flex xs4 class="text-xs-center">
                                                <v-icon medium>people</v-icon>
                                            </v-flex>
                                            <v-flex xs4 class="text-xs-center">
                                                <v-icon medium>schedule</v-icon>
                                            </v-flex>
                                            <v-flex xs4 class="text-xs-center">
                                                <v-icon medium>favorite_border</v-icon>
                                            </v-flex>
                                        </v-layout>
                                    </v-content>
                                    <v-content fluid grid-list-sm class="pb-2">
                                        <v-layout row wrap justify-center>
                                            <v-flex xs4 class="text-xs-center">
                                                <span v-text="game.PlayerRange + ' players'"></span>
                                            </v-flex>
                                            <v-flex xs4 class="text-xs-center">
                                                <span v-text="game.PlayTime + ' minutes'"></span>
                                            </v-flex>
                                            <v-flex xs4 class="text-xs-center">

                                            </v-flex>
                                        </v-layout>
                                    </v-content>

                                    <v-content>
                                        <span style="font-weight: bold">Description</span>
                                        <br />
                                        <a>Read More</a>
                                    </v-content>

                                    <v-content>
                                        <span style="font-weight: bold">Categories</span>
                                        <br />
                                        <v-chip small label outline color="cyan" v-for="category in game.Categories">{{ category.Name }}</v-chip>
                                    </v-content>

                                    <v-content>
                                        <span style="font-weight: bold">Mechanics</span>
                                        <br />
                                        <v-chip small label outline color="black" v-for="mechanic in game.Mechanics">{{ mechanic.Name }}</v-chip>
                                    </v-content>

                                    @*<span v-text="'Expansion: ' + game.IsExpansion"></span><br />
                                    <span v-text="game.Description"></span>*@
                                </v-card-text>
                            </v-slide-y-transition>

                        </v-card>
                    </v-flex>

                </v-layout>
            </v-tabs-content>
        </v-tabs-items>
 
    </v-tabs>

</main>
