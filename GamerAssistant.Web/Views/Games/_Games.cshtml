<main class="pt-3">
    <!--Games Lists Tab-->
    <v-tabs fixed centered class="pt-5" scrollable>
        <v-tabs-bar class="transparent">
            <v-tabs-item v-for="tab in tabs" :key="tab" :href="'#' + tab">{{ tab }}</v-tabs-item>
            <v-tabs-slider class="yellow"></v-tabs-slider>
        </v-tabs-bar>

        <v-tabs-items>
            <v-tabs-content fluid grid-list-xl class="pt-1" :id="'My Games'">
                <v-layout row wrap justify-center class="pa-3">

                    <v-flex class="pa-3" lg3 md4 sm6 xs12 v-for="game in games.BggGames" :key="game.id">
                        <v-card>

                            <v-card-media :src="game.ImageUrl" height="120px" @@click.native="game.ShowDetails = !game.ShowDetails">
                                <div id="overlay" style="background-color: rgba(0,0,0,0.5); z-index: 2; width: 100%; height: 100%; display: flex; justify-content: flex-start;">
                                    <v-card-title class="headline white--text" primary-title style="align-self: flex-end"><span v-text="game.Name"></span></v-card-title>
                                </div>
                            </v-card-media>

                            <v-slide-y-transition>
                                <v-card-text v-show="game.ShowDetails">
                                    <v-content fluid grid-list-xs>
                                        <v-layout row>
                                            <v-flex xs4>
                                                <div><v-icon style="padding-bottom: 0.5em">fa-users</v-icon></div>
                                                <div><v-icon style="padding-bottom: 1em">fa-clock-o</v-icon></div>
                                                <div><span v-text="'Year Published: '"></span></div>
                                            </v-flex>
                                        </v-layout>
                                    </v-content>
                                    <v-flex xs4>
                                        <div><span v-text="': ' + game.PlayerRange + ' players'"></span></div>
                                        <div><span v-text="': ' + game.PlayTime + ' minutes'"></span></div>
                                        <div><span v-text="game.YearPublished"></span></div>
                                    </v-flex>
 
                                    
                                    <span v-text="'Expansion: ' + game.IsExpansion"></span><br />
                                    <span v-text="game.Description"></span>
                                </v-card-text>
                            </v-slide-y-transition>

                        </v-card>
                    </v-flex>

                </v-layout>
            </v-tabs-content>
        </v-tabs-items>
 
    </v-tabs>

</main>
